#==============================================================================#
#                               // NAME \\                                     #
#==============================================================================#

NAME = wolf3d

#==============================================================================#
#                           //  SOURCES  \\                                    #
#==============================================================================#

SRCS = srcs/

#==============================================================================#
#                             //  FLAGS  \\                                    #
#==============================================================================#

FLAGS = -Wall -Werror -Wextra

#==============================================================================#
#                            // COMPILATION \\                                 #
#==============================================================================#

all: $(NAME)

$(NAME):
	make -C libft \re
	gcc -o $(NAME) $(FLAGS) $(SRCS) -I./includes -lft -L./libft

#==============================================================================#
#                              // DELETING \\                                  #
#==============================================================================#

clean:
	make clean -C libft

fclean:
	make fclean -C libft
	rm -f $(NAME)

#==============================================================================#
#                             // RETRY \\                                      #
#==============================================================================#

re: fclean all

.PHONY : all clean fclean re
