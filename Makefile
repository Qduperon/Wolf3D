#==============================================================================#
#                               // NAME \\                                     #
#==============================================================================#

NAME = wolf3d

#==============================================================================#
#                           //  SOURCES  \\                                    #
#==============================================================================#

SRCS = srcs/algo.c \
	   srcs/dir.c \
	   srcs/draw.c \
	   srcs/error.c \
	   srcs/hook.c \
	   srcs/init.c \
	   srcs/main.c \
	   srcs/maps.c \
	   srcs/move.c \
	   srcs/music.c \
	   srcs/plan.c \
	   srcs/pos.c \
	   srcs/tools.c \
	   srcs/tools_calc.c \
	   srcs/tools_hook.c \

#==============================================================================#
#                             //  FLAGS  \\                                    #
#==============================================================================#

FLAGS = -Wall -Werror -Wextra

#==============================================================================#
#                            // COMPILATION \\                                 #
#==============================================================================#

all: $(NAME)

$(NAME):
	@echo "Begining Wolf..."
	make -C libft/ re
	make -C minilibx_macos/ re
	gcc -o $(NAME) $(FLAGS) $(SRCS) -lmlx -framework OpenGL -framework AppKit \
		-I./includes -lft -L./libft
	@echo "Wolf Done"

#==============================================================================#
#                              // DELETING \\                                  #
#==============================================================================#

clean:
	make clean -C libft
	make clean -C minilibx_macos

fclean:
	make fclean -C libft
	make clean -C minilibx_macos
	rm -f $(NAME)

#==============================================================================#
#                             // RETRY \\                                      #
#==============================================================================#

re: fclean all

.PHONY : all clean fclean re
